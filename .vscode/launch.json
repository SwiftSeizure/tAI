{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "FastAPI Debug (Swagger Enabled)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "backend.main:app",       // change this if your entry point is different
